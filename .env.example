# Bot token from BotFather
BOT_TOKEN=your_bot_token_here

# Database URL
# For SQLite (default):
DATABASE_URL=sqlite+aiosqlite:///./data/app.db
# For PostgreSQL:
# DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/dbname

# Timezone
TIMEZONE=Europe/Amsterdam

# Allowed chat IDs (optional, comma-separated)
# Leave empty to allow all chats
ALLOWED_CHAT_IDS=

# Karma cooldown in minutes
KARMA_COOLDOWN_MINUTES=60

# Warning settings
WARN_LIMIT=3
MUTE_HOURS=24

# Admin user IDs (optional, comma-separated)
# Additional admin IDs besides chat administrators
ADMIN_IDS=

# Greeting cooldown in minutes
GREETING_COOLDOWN_MINUTES=10

# Greeting chat IDs (optional, comma-separated)
# Leave empty to greet in all chats
GREETING_CHAT_IDS=

# Logging level
LOG_LEVEL=INFO

